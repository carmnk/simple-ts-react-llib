{
  "name": "simple-react-lib",
  "version": "0.1.0",
  "description": "a simple react typescript library template",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/copydist.js && npm run lint && tsc",
    "lint": "eslint src/**",
    "lintScripts": "eslint scripts/**",
    "prettier": "prettier --config .prettierrc.js scripts/**/*.{js,ts,tsx,css} src/**/*.{js,ts,tsx,css} --write",
    "format": "npm run prettier",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "ts",
    "typescript",
    "library"
  ],
  "author": "carmnk",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "fs-extra": "^9.1.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react-docgen-typescript": "file:../OpenSourceLocal/react-docgen-typescript",
    "typescript": "^4.2.2"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
